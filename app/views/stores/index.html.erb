<body>

<h2>Stores</h2>

</body>

<div class="table-wrapper-scroll-y my-custom-scrollbar">
    <table class="table table-striped col-md-12" id="stores">
      <thead>
        <tr>
          <th>Store</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% @stores.each do |store| %>
          <tr>
            <td>
              <%= store.name %>
            </td>
            <td>
              <%= store.description %>
            </td>
            <td>
              <%= link_to "Order", store_path(store) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>


<div class="card-columns">
    <% @stores.each do |store| %>
        <div class="card " style="width: 14rem; length; 10rem">
          <img src="https://media.istockphoto.com/photos/cheesy-pepperoni-pizza-picture-id938742222?s=612x612" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= store.name %></h5>
            <p class="card-text"><%= store.description %></p>
            <%= link_to "Order", store_path(store) %>
          </div>
        </div>
    <% end %>
</div>
    
