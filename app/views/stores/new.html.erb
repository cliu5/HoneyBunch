<h2>Create New Store</h2>

<%= form_tag stores_path, :class => 'form' do %>
  <%= label :store, :name, 'Name', :class => 'col-form-label' %>
  <%= text_field :store, :name, :class => 'form-control' %>
  <%= label :store, :rating, 'Rating', :class => 'col-form-label'  %>
  <%= select :store, :rating, ['1 stars', '2 stars', '3 stars', '4 stars', '5 stars'], {}, {:class => 'form-control col-1'} %>
  <%= text_field :store, :rating %>
  <!-- again, not sure if the above line belongs there -->
  <br/>
  <%= submit_tag 'Save Changes', :class => 'btn btn-primary' %>
  <%= link_to 'Cancel', stores_path, :class => 'btn btn-secondary' %>
<% end %>
